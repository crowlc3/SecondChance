{
  "manifest_version": 2,

  "name": "Second Chance",
  "description": "SD&D",
  "version": "1.0",

  "icons":{
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://chrispence.me/secondchance",
    "tabs"
  ],
  "background": {
    "scripts": [ "jquery-3.4.1.min.js", "catch2.js"],
    "persistent": true
  }
}